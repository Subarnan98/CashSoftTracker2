{% extends 'base.html.twig' %}

{% block title %}Support Cash Converters : Connexion{% endblock %}

{% block body %}

    <style>
        .Header{
            position: absolute !important;
            visibility: hidden !important;
        }
    </style>
    
    <div class="offset-xl-3 col-xl-6" style="margin-top: 2%">
        <div class="row">
            <div class="offset-md-2 col-md-8 home-container" style="padding: 0;" align="center">
                <h4>Bienvenue sur le Support <br> de Cash Converters Europe !</h4>
                <p>Veuillez vous identifier.</p>
            </div>
            <div class="offset-md-2 col-md-8 container-block-home" style="padding: 0;">
                {# Logo #}
                <div class="card-header header_card_white" align="center">  <img class="logo_size" src="{{ asset('Logo/logo.png') }}"> </div>
                
                {# Login form #}
                <div class="card-body offset-xl-2 col-xl-8">
                    <form action ="{{ path('login') }}" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" value="{{ last_username }}" name="_username" id="inputUlogin" class="form-control  input_user"  placeholder="Identifiant" required>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="_password" id="inputPassword" class="form-control input_pass" placeholder="Mot de Passe" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button  name="button" class="btn login_btn btn_color" type="submit"><i class="fas fa-sign-in-alt"> Connexion </i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}


