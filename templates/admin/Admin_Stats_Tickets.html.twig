{% extends 'base.html.twig' %}

{% block title %} Support Cash Converters - Admin Stats Tickets  {% endblock %}

{% block body %}
<div class="card card_ticket">
    <div class="card-header">
        <h3> <i class="fa fa-ticket"> Statistisques Tickets</i> </h3>
    </div>


    <div class="card-body">

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" role="button" class="btn btn-outline-success"> <i class="fas fa-check"> Afficher </i></button>

        {{ form_end(form) }}

        {% if stats is defined %}
        {% if stats is not empty %}

            <table id="StatsView" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">MAGASINS</th>
                        <th scope="col">NB TICKET</th>
                    </tr>
                </thead>
                <br>
                <tbody>
                <h3>Résultat: {{ Date1 }} au {{ Date2 }} ( {{ DateDiff }})</h3>

                <td>{{ ChoiceMag.Nom }}</td>
                <td><strong>{{ stats }}</strong></td>

                </tbody>
            </table>

        {% endif %}
        {% endif %}



        {% if stats2 is defined %}
            {% if stats2 is not empty %}

                <table id="StatsView" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">MAGASINS</th>
                        <th scope="col">NB TICKET</th>
                    </tr>
                    </thead>
                    <br>
                    <tbody>
                    <h3>Résultat: {{ Date1 }} au {{ Date2 }} ( {{ DateDiff }})</h3>

                    {% set nb = 0 %}

                    {% for row in stats2 %}
                        <tr>
                            <td>{{ row["nom"] }}</td>
                            <td>{{ row["counter"] }}</td> {% set nb = nb + row["counter"] %}
                        </tr>
                    {% endfor %}
                    <tr class="no-sort">
                        <td><b>TOTAL</b></td>
                        <td><strong>{{ nb }}</strong></td>

                    </tr>





                    </tbody>
                </table>

            {% endif %}
        {% endif %}

    </div>
</div>

