{% extends 'base.html.twig' %}

{% block title %}Support Cash Converters - Admin CatégoriesAll{% endblock %}

{% block body %}

    <div class="card card_ticket">
        <div class="card-header">
            <h3> <i class="fas fa-list"> Liste des Catégories </i></h3>
        </div>
        <div class="card-body">
            <div class="row"> <a href="{{ path('create.categorie') }}" class="btn btn-outline-info button_space"> <i class="fas fa-bars "> Créer une Categorie </i></a></div>
            {% if categories is defined %}
                {% if categories is not empty %}
                <br>
                <table id="Catégories" class="table table-striped table-bordered table-hover" style="width: 100%">
                    <thead class="thead-dark ">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Categorie</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>

                    <tbody>

                    {% if categories is not empty %}

                    {% endif %}

                    {% for categorie in categories %}
                        <tr class="font_background">
                            <th scope="row">{{ categorie.id }}</th>
                            <td>{{ categorie.Nom }}</td>
                            <td> <a href="{{ path('admin.categorie.delete', {'id' : categorie.id } ) }}" class="btn btn-outline-danger" role="button"><i class="fas fa-trash-alt"> Supprimer</i></a></td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>

            {% endif %}
            {% endif %}

        </div>
    </div>

{% endblock %}
