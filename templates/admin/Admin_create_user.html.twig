{% extends 'base.html.twig' %}
{% block title %}Support Cash Converters - Admin NewUser {% endblock %}
{% block body %}

    <div class="card card_ticket">
        <div class="card-header">
            <h3> <i class="fas fa-plus"> Création Utilisateur  </i></h3>

        </div>
        <div class="card-body">
            <div class="col-md-12 offset-md-12">
                <a href="{{ path('admin.user.all') }}" class="btn btn-outline-dark" role="button"><i class="fas fa-undo"> Retour à la liste d'Utilisateur </i> </a>
            </div>
            <br>
            <form method="post" action="" class="needs-validation" novalidate>
                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                {{ form_widget(form) }}
                <button type="submit" role="button" class="btn btn-outline-success"> <i class="fas fa-plus"> Créer </i></button>
                {{form_end(form)}}
            </form>
        </div>
    </div>
    <br>

{% endblock %}