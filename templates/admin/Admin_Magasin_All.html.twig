{% extends 'base.html.twig' %}

{% block title %} Support Cash Converters - Admin MagasinsAll {% endblock %}

{% block body %}
    <div class="card card_ticket">
        <div class="card-header">
            <h3> <i class="fas fa-list"> Liste des Magasins </i></h3>
        </div>
        <div class="card-body">
            <div class="row"> <a href="{{ path('magasin.create') }}" class="btn btn-outline-info button_space"> <i class="fas fa-store"> Créer un Magasin </i></a></div>
            {% if Magasins is defined %}
                {% if Magasins is not empty %}
                    <br>
                    <table id="Magasin" class="table table-striped table-bordered table-hover" style="width: 100%">
                        <thead class="thead-dark ">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">MAGASIN</th>
                            <th scope="col">TÉLÉPHONE</th>
                            <th scope="col"> EMAIL</th>
                            <th scope="col">FRANCHISÉ(E)</th>
                            <th scope="col">PORTABLE</th>
                            <th scope="col">ACTION</th>
                        </tr>
                        </thead>

                        <tbody>

                        {% for Magasin in Magasins %}
                            <tr class="font_background" onClick="document.location.href='{{ path("admin.magasin.show", {id : Magasin.id}) }}'">
                                <th scope="row"> <a href="" style="text-decoration:none; color: #C82829;"> {{ Magasin.id }} </a></th>
                                <td><a href="" ><span class="badge badge-pill badge-dark"> {{ Magasin.nom }} </span> </a></td>
                                <td><a href="">0{{ Magasin.tel }}</a></td>
                                <td><a href=""> {{ Magasin.Email }}</a></td>
                                <td><a href=""> <span class="badge badge-pill badge-secondary"> {{ Magasin.RespName }} </span></a></td>
                                <td><a href="">{{ Magasin.Portable }}</a> </td>

                                <td><a href="{{ path("admin.magasin.delete", {id : Magasin.id}) }}" class="btn btn-outline-danger button_space"> <i class="fa fa-trash-o"> Supprimer </i></a> </td>
                            </tr>


                        {% endfor %}

                        </tbody>
                    </table>
                {% else %}
                    <span class="badge badge-danger">Pas de De Magasin</span>
                    <div class="alert alert-primary" role="alert">

                        <!--Vous n'avez pas de ticket pour l'instant.<a href="#" class="alert-link">Creation Ticket</a> Vous pouvez en creer un si vous le souhaité.-->
                    </div>

                {% endif %}
            {% endif %}

        </div>
    </div>
{% endblock %}
