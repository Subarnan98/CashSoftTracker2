            {{form_end(form)}}

        <br>
            {% if result is defined %}

            {% if result is not empty %}
                <h4> Résultat : {{ Date }}</h4>
                <div class="row">
            {% for res in result %}
                <div class="card-deck">
                    <div class="card border-dark mb-3" style="max-width: 18rem;">
                        <div class="card-header bg-light text-black-50">{{ res['nom'] }}</div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-1 text-muted">{{ res['counter'] }} tickets</h6>
                        </div>
                    </div>
                </div>

         {% endfor %}

            {% endif %}
            {% endif %}

        </div>


    </div>
    </div>


{% endblock %}
