{% extends 'base.html.twig' %}

{% block title %}Support Cash Converters - InformationsAll {% endblock %}

{% block body %}

    <div class="card card_ticket">
        <div class="card-header">
            <h3> <i class="fas fa-list"> Liste des Message d'information support </i></h3>
        </div>
        <div class="card-body">
            <div class="row"> <a href="{{ path('create.information') }}" class="btn btn-outline-info button_space"> <i class="fas fa-bell"> Créer un Message </i></a></div>
            {% if informations is defined %}
                {% if informations is not empty %}
                    <br>
                    <table id="Catégories" class="table table-striped table-bordered table-hover" style="width: 100%">
                        <thead class="thead-light ">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Message</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>

                        <tbody>

                        {% if informations is not empty %}

                        {% endif %}

                        {% for information in informations %}
                            <tr class="font_background">
                                <th scope="row">{{ information.id }}</th>
                                <td>{{ information.message }}</td>
                                <td> <a href="{{ path('admin.information.delete', {'id' : information.id } ) }}" class="btn btn-outline-danger" role="button"><i class="fas fa-trash-alt"> Supprimer</i></a></td>
                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>

                {% endif %}
            {% endif %}

        </div>
    </div>

{% endblock %}
